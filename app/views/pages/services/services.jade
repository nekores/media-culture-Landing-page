mixin services-page1()
	section
		.container
			.row.mv60
				.col-md-12
					.text-center
						+heading('our','services','people says about us')
					.mt30
						+iconbox-5('col-md-4 col-sm-4 col-xs-12 mv40', 3)

		+countup1()
		+call-out-btn-right()
		+footer-2()

