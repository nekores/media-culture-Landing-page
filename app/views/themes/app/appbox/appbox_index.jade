mixin mc-section-titles(before_text,after_text, text_para)
	div()&attributes(attributes).mc-section-title
		.container
			.row
				.col-md-12
					ul.list-inline.text-center
						li.before-text
							h2 #{before_text}
						li.after-text
							h2 #{after_text}
					hr.hr1
					hr.hr2
					.col-md-8.col-md-offset-2.text-center
						p #{text_para}



