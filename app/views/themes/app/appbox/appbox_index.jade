//- BUTTONS FOR APPBOX
mixin btn-appbox(name, link)
	a.no-decoration(href='#{link}')&attributes(attributes)
		.btn.btn-appbox&attributes(attributes) #{name}

mixin btn-appbox-glass(name)
	a.no-decoration(href='#')&attributes(attributes)
		.btn.btn-appbox-glass&attributes(attributes) #{name}

mixin btn-appbox-icon(name, icon)
	a.no-decoration&attributes(attributes)
		.btn.btn-appbox-icon&attributes(attributes) #{name}
			span.fa.fa-(class=icon)&attributes(attributes).pl10

mixin btn-appbox-icon-glass(name, icon)
	a.no-decoration&attributes(attributes)
		.btn.btn-appbox-icon-glass&attributes(attributes) #{name}
			span.fa.fa-(class=icon)&attributes(attributes).pl10




