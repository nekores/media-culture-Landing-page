.cooking-section_title
	.heading
		text-align left
		padding-top: 80px;
		height: 210px;
		width: 100%;
		z-index: 1;
		.text
			font-weight 100
			.title
				border 2px solid #333
				margin auto
				height 100px
				width 400px
				position relative
				text-align center
				h3
					position absolute
					top -23px
					padding 5px
					left 50px
					border-radius 50%
					width 200px
					font-size 25px
					color #333
					background-color white
					z-index 1
					text-transform uppercase
					font-weight 700
					letter-spacing 7px
				h4
					position: absolute;
					bottom: -17px;
					right: 32px;
					width: 200px;
					text-align: center;
					padding-left: 9px;
					font-weight: 700;
					font-size: 25px;
					color: #333;
					background-color: white;
					letter-spacing: 10px;
					text-transform: uppercase;
				.lower
					position absolute
					width 100%
					.slogan
						position absolute
						padding-top 35px
						padding-bottom 16px
						text-align center
						height 100%
						width 100%
						margin auto
						span
							font-weight: 600;
							font-size: 12px;
							text-transform: uppercase;
							color: primary;
							letter-spacing: 2.7px;
					
	@media(max-width 400px)
		.heading
			.text
				.title
					width 100%
					h3
						left 20px
						top -14px
						width 80px
						font-size 14px
						letter-spacing 2px
					h4
						right 20px
						bottom -12px
						width 100px
						font-size 14px
						letter-spacing 2px
					.lower
						.slogan
							span
								font-size 10px
				
.no-dac
	text-decoration none !important
.ts
	text-shadow 1px 0px 1px black
.fs-title
	font-size 17px !important
.ma
	margin auto !important
.bs
	box-shadow .6px .6px .8px .1px black