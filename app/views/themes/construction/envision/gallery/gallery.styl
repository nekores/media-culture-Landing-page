.gallery-envision
	.contain
		background #f7f7f7
		padding-left 11.66666667%
	.heading
		position: absolute;
		top: 90px;
		padding-left: 70px;
		padding-top: 80px;
		height: 150px;
		width: 260px;
		left: 30px;
		z-index: 1;
		background-color primary
		h3
			color white
			font-weight 500
			font-size 30px
			text-transform uppercase
		.text
			font-size 12px
			text-transform uppercase
			padding-left 10px
			border-left 8px solid darken(gray, 50%)
	// mixit up
	#envision_gallery-mixitup
		overflow hidden
	.mix
		display none
	nav
		// margin-top -50px
		background-color #333
		margin-bottom 30px
	.portfolio-filter
		list-style none
		text-align center
		li
			display inline-block
			a
				transition 0.5s all
				color primary
				letter-spacing 2px
				display block
				margin-right 18px
				margin-left 18px
				font-size 12px
				line-height normal
				padding 10px
				text-transform uppercase
				&.active
					background-color primary
					color white
					cursor pointer !important
				&:hover
					transition 1s all ease-in-out
					color lighten(primary, 50%)
					cursor pointer !important
					text-decoration none
				&:focus , &:visited, &:active
					box-shadow none
					text-decoration none
					outline 0 none
	figure
		margin 8px
		padding 5px
		background-color white
		// outline 10px black
		border 1px solid lighten(black, 80%)
		position relative
		overflow hidden
		&, figcaption
			transition 1s all
		figcaption
			transition 1s all
			position absolute
			width 50%
			height 100%
			left -100% 
			background-color alpha(primary, 60%)
			top 0
			opacity 0
		.figcaption1
			transition 1s all
			position absolute
			width 50%
			height 100%
			right -100%
			background-color alpha(primary, 60%)
			top 0
			opacity 0
		.figcaption2
			transition 1s all
			position absolute
			width 100%
			height 100%
			opacity 0
			top 0
			left 0
			i
				transition 1s all
				position relative
				color white
				top 0
				left 0
				line-height 40px
				font-size 30px
		&:hover
			img
				cursor pointer
			figcaption
				transform rotate(45deg) scale(4)
				opacity 2
				border-radius 0
				cursor pointer
				left 0
			.figcaption1
				transform rotate(45deg) scale(4)
				opacity 2
				cursor pointer
				border-radius 0
				right 0
			.figcaption2
				opacity 2
				cursor pointer
				text-decoration none
				z-index 5
				top 0
	@media(max-width: 307px)
		.heading
			top 15px
			padding-left: 30px;
			padding-top: 40px;
			height: 100px;
			width: 210px;
	@media(max-width: 1199px)
		.heading
			top 100px
			marin auto 0
			left 20px
			center block
			padding-left: 30px;
			padding-top: 50px;
			height: 120px;
			width: 210px;
	@media(max-width: 991px)
		.heading
			top 15px
			marin auto 0
			left 0px
			center block
			padding-left: 30px;
			padding-top: 30px;
			height: 100px;
			width:100%;
