.about-envision
	.contain
		background #f7f7f7
		padding-left 11.66666667%
	.heading
		position: absolute;
		top: 90px;
		padding-left: 70px;
		padding-top: 80px;
		height: 150px;
		width: 260px;
		left: 30px;
		z-index: 1;
		background-color primary
		h3
			color white
			font-weight 500
			font-size 30px
			text-transform uppercase
		.text
			color darken(gray, 50%)
			font-size 12px
			text-transform uppercase
			padding-left 10px
			border-left 8px solid darken(gray, 50%)
	.contain
		padding-top 150px
		padding-bottom 150px
		.img
			margin-top 10px
			position relative
			border 10px solid darken(white, 15%)
			.layer1
				position absolute
				height 100%
				width 100%
				top 0
				left 0
				opacity 0
				transition 1s all
				background-color alpha(black, 50%)
				z-index 2
			&:hover
				.layer1
					cursor pointer
					opacity 2
		.text-heading
			h4
				color primary
				letter-spacing 0.5px
				line-height 30px
			p
				letter-spacing 0.9px
				line-height 30px
	// callout
	.callout1
		.callout
			position relative
			// height 100%
			// width 100%
			background-color primary
			.twitter1
				margin-left 20%
				height 100px
				width 160px
				top 0
				z-index 3
				left 0
				// position absolute
				background-color red
				h3
					color green
					// position a
					padding-right 10px
					text-align right
					font-size 50px
			.twitter2
				margin-left 20%
				height 100px
				width 160px
				top 0
				z-index 3
				right 0
				// position absolute
				background-color red
				h3
					color green
					// position a
					padding-right 10px
					text-align right
					font-size 50px
	@media(max-width: 307px)
		.heading
			// overflow hidden
			top 15px
			// marin auto 0
			// left 0
			// right 0
			// center block
			
			padding-left: 30px;
			padding-top: 40px;
			height: 100px;
			width: 210px;
	@media(max-width: 1199px)
		.heading
			top 100px
			marin auto 0
			left 20px
			center block
			padding-left: 30px;
			padding-top: 50px;
			height: 120px;
			width: 210px;
	@media(max-width: 991px)
		.heading
			top 15px
			marin auto 0
			left 0px
			center block
			padding-left: 30px;
			padding-top: 30px;
			height: 100px;
			width:100%;
	