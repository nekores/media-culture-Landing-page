.appointment-custom
	form
		input
			width 100%
			color #fff
			box-shadow none
			margin-top 10px
			padding 8px
			font-size 14px
			border-radius 0
			border 1px solid primary
			transition 0.5s all
			background-color transparent
			&:focus
				background-color alpha(primary, 20%)
				border-color primary
				outline none
			&:hover
				background-color alpha(primary, 20%)
				border-color primary
			&:active
				background-color alpha(primary, 30%)
				border-color primary
		textarea
			color #fff
			letter-spacing 1px
			box-shadow none
			transition 0.5s all
			padding 8px
			outline none
			width 100%
			margin-top 10px
			border-radius 0
			border 1px solid primary
			background-color transparent
			&:focus
				background-color alpha(primary, 20%)
				border-color primary
				outline none
			&:hover
				background-color alpha(primary, 20%)
				border-color primary
			&:active
				background-color alpha(primary, 30%)
				border-color primary
		.button-appointment
			.btn-primary
				transition 0.5s all
				background-color primary 	 
				&:focus
					background-color darken(primary, 30%)
					border-color primary
					outline none
				&:hover
					background-color darken(primary, 20%)
					border-color primary
				&:active
					background-color darken(primary, 30%)
					border-color primary
		