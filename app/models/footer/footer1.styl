.separater-100
	width 100% !important
	position relative
	height 1px
	margin-top 15px
	background-color #333
.page-footer
	position relative
	background-color darken(white, 95%)
	.title
		font-weight 100
		color #bbb
		text-transform uppercase
	.para
		color #bbb
		font-size 15px
		.form-attributes
			background-color transparent
			color darken(white, 5%)
			border-radius 0
			font-size 14px
			width 100%
	.links
		ul
			li
				padding 5px 0px
				a
					color white
					font-size 14px
					text-decoration none
	.copyright
		
		background-color darken(white, 97%)
		p
			font-size 14px
			color white
			padding-top 15px
			text-align center
.social-icon
	width 45px
	height	45px
	display inline-block
	text-align center
	background-color transparent
	color primary
	border-style solid
	border-width 1px
	transition all 0.5s
	border-radius 50%
	margin-right 10px
	border-color primary
	&:hover
			background-color primary
			color white
	.fa
		line-height 45px
		font-size 20px
		&:hover
			color white
.input-glass
	background-color transparent
	width 100%
	color white
	padding 8px
	border-width 1px