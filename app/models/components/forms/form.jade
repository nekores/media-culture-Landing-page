//-===VALIDATION  MIXIN START HERE ===


mixin validation-success()
	.form-group.has-success
		label(class="control-label" for="inputSuccess1") Input with success
		input(type="text" class="form-control" id="inputSuccess1")
mixin validation-error()
	.form-group.has-error
		label(class="control-label" for="inputSuccess1") Input with error
		input(type="text" class="form-control" id="inputError1")
mixin validation-waring()
	.form-group.has-warning
		label(class="control-label" for="inputWaring1") Input with waring
		input(type="text" class="form-control" id="inputWaring1")


//-===VALIDATION  MIXIN END HERE ===


//-===VALIDATION ICON MIXIN START HERE ===


mixin validation-waring-icon()
	.form-group.has-warning.has-feedback
		label(class="control-label" for="inputWaring1") Input with waring
		input.bdr-rad-reset(type="text" class="form-control" id="inputWaring1")
		span(class="glyphicon glyphicon-warning-sign form-control-feedback")


mixin validation-success-icon()
	.form-group.has-success.has-feedback
		label(class="control-label" for="inputSuccess1") Input with success
		input.bdr-rad-reset(type="text" class="form-control" id="inputSuccess1" aria-describedby="inputSuccess2Status")
		span(class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true")


mixin validation-error-icon()
	.form-group.has-error.has-feedback
		label(class="control-label" for="inputSuccess1") Input with error
		input.bdr-rad-reset(type="text" class="form-control" id="inputError1")
		span(class="glyphicon glyphicon-remove form-control-feedback")
		span(id="inputError2Status" class="sr-only")


mixin validation-success-group()
	.form-group.has-success.has-feedback
		label(class="control-label" for="inputSuccess1") Input group with success
		.input-group
			span(class="input-group-addon") @
			input.bdr-rad-reset(type="text" class="form-control" id="inputSuccess1" aria-describedby="inputSuccess2Status")
		span(class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true")


//-===VALIDATION ICON MIXIN START HERE ===