mixin circle-glass-icon(icons,title,subtitle)
    // === Count Up Starts here === 
    i.glass-icon.fa(class=icons)
    h3.counter  #{title}
    p #{subtitle}
    // === Count Up end here === 


mixin counter-2(countclass,title,subtitle)
    .counter2
        .countsup(class=countclass)
            h3.counter  #{title}
            p #{subtitle}

mixin counter-3(icons,title,subtitle)
    .counter-box1
        i.glass-icon.fa(class=icons)
        p #{subtitle}
        h3.counter  #{title}
mixin counter-box2(icons,title,subtitle)
    .counter-box2.counter-box1
        i.glass-icon.fa(class=icons)
        p #{subtitle}
        h3.counter  #{title}
mixin counstruction-counter(icons,title,subtitle)
    .counter-boxflat.counter-boxflat.flat-icon
        i.glass-icon(class=icons)
        p #{subtitle}
        h3.counter  #{title}
mixin enthink-counter(icons,title,subtitle)
    .counter-boxflat-enthink.counter-boxflat.flat-icon
        i.glass-icon(class=icons).rounded-circle.pv35.ph10
        p.pt30.pb10 #{subtitle}
        h3.counter  #{title}




mixin countup1()
    // === fullwidth counter start here ===
    section().countup1&attributes(attributes)
        .counter-bg-image
            .bg-alpha
                 .container
                    .row.mv50
                        .col-md-10.col-md-offset-1.no-padding
                            if block
                                block
                            else
                                .col-md-3.col-lg-3.col-sm-6.col-xs-12
                                    +circle-glass-icon('fa-users','200' ,'happy clients')
                                .col-md-3.col-lg-3.col-sm-6.col-xs-12
                                    +circle-glass-icon('fa-code','1469','line of code')

                                .col-md-3.col-lg-3.col-sm-6.col-xs-12
                                    +circle-glass-icon('fa-facebook','1200','facebook')

                                .col-md-3.col-lg-3.col-sm-6.col-xs-12
                                    +circle-glass-icon('fa-twitter','3045','twitter')
    // === fullwidth counter end here ===


mixin countup2()
    // === fullwidth counter 2 start here ===
