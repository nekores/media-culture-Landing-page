        .col-md-3.col-lg-3.col-sm-6.col-xs-12
            +counter-2("contbdr",'469','Happy Clients')

        .col-md-3.col-lg-3.col-sm-6.col-xs-12
            +counter-2('contbdr','1753','Seasons of photographed')

        .col-md-3.col-lg-3.col-sm-6.col-xs-12
            +counter-2('contbdr','6735','Comercials photographs')



        // === fullwidth counter 2 end here ===

