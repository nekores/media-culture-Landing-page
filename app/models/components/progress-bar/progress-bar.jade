        div.wow.fadeInLeft(class="progress-bar progress-bar-success wow fadeInLeft" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: #{width1}")
            span.sr-only 40% Complete
