        div.wow.fadeInLeft(class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: #{width2}")
            span.sr-only 20% Complete
    .progress&attributes(attributes)
        div.wow.fadeInLeft(class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width:  #{width3}")
            span.sr-only 60% Complete
    .progress&attributes(attributes)
        div.wow.fadeInLeft(class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100" style="width:  #{width4}")
