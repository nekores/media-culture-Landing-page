mixin default-progress()
    .progress&attributes(attributes)
        div.wow.fadeInLeft(class="progress-bar " role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;")
            span.sr-only 20% Complete
mixin progress-label()
    .progress&attributes(attributes)
        div.wow.fadeInLeft(class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 20%;") 20% 
