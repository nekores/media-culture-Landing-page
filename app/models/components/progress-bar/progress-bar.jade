mixin skills-icon(icon,title,id)
    #progressbar&attributes(attributes)
        .text-center.pv70
            .progressbar.bdr-rad-circle.bg-white(id="#{id}")
                strong.percent.pos-a.left-0
            .icon.pos-r.pv40.clr-primary.text-center.fs20
                span.pr20(class="fa #{icon}")
                span.clr-dark-md.ml10 #{title}



mixin smallest-progressbars(classes,label,wid)
    //=== single progress bar start here ===
    div(class="classes")
        h3.sxx-heading #{label}
        .progress.progress-xs
            div.wow.fadeInLeft(class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: #{wid}") 
    //=== single progress bar end here ===