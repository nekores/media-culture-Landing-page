.price1
	position relative
	width 100%
	height 100%
	background-color darken(white, 25%) !important
.price2
	position relative
	background-color lighten(black, 95%) !important
.bg-clr-table
	background-color darken(white, 10%) !important
	width 100%
	height 400px
	
	.num-title
		padding 8px 0 !important
		background-color darken(white, 40)
		color white
		text-align center
		text-transform uppercase
	.title-heading
		color lighten(black, 30%) !important
		padding 12px 0 !important
		background-color darken(white, 20)
		text-align center
		h3
			line-height 40px
			font-size 40px !important
			
		span
			text-transform lowercase
			font-size 14px
			line-height 16px
	.price-list
		text-align center
		padding 5px 0px
		p
			padding 8px 5px 1px 5px
			color #777
			span
				font-weight 400
				color #999
	.price-button
		margin-top 15px
		text-align center
.price-seprator
	position relative
	width 100%
	height 1px
	background-color #bbb
.sign-up-button
	position relative
	padding 15px 60px !important
	background-color transparent
	color #aaa
	border-radius 0px
	border 1px solid primary
	text-transform capitalize
	font-size 16px
	&:hover
	&:focus	
		background-color lighten(primary, 10%)
		color white
		outline none
.package
	transition 0.6s ease-in-out
	text-align center
	border 10px solid #eee
	text-transform uppercase
	color #777
	h3
		transition 0.5s ease-in-out
		background-color #eee
		padding 25px
	ul
		padding 0
		margin 0
		list-style-type none
		li
			text-transform capitalize
			font-weight 300
			padding 15px 15px
			border-bottom 1px solid #eee
	a
		text-decoration none
		padding 30px 10px
		h2
			font-weight 200
			color #555
			font-size 50px
			span
				font-size 25px
				color primary
	&:hover
		transition 0.9s ease-in-out
		border-color #999
		transform: scale(1.03) rotate(0deg) translateX(0px) translateY(0px) skewX(0deg) skewY(0deg);
		h3
			color white
			margin-top -1px
			background-color #999