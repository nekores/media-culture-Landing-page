.ethink-imgbox-service
	.enthink-img-box1
		.text
			.title
				h3
					font-size 13px
					font-weight 800
					letter-spacing 0.2px
			.dates-icon
				ul
					border-top 1px dotted primary
					border-bottom 1px dotted primary
				ul > li
						font-size 11px
						a
							color darken(white, 40%)
							transition 0.5 all
							&:hover
								color primary
			.description
				p
					font-size 15px
			.button
				margin-left -12px
				background-image none
				padding-bottom 18px
				.btn
					padding-top 8px
				.btn-primary
					font-weight 100px !important
					font-size 12px
					padding-right 10px
					letter-spacing 0.9px
					border-radius 0px
					text-transform uppercase !important
					box-shadow .6px .6px .8px .1px black
					text-shadow 1px 0px 1px black
					border-color primary
					background-color primary
					span
						top -3px
						left 100px
						box-shadow .6px .6px .8px .1px black
						padding 11px
						background-color darken(primary, 20%)
						font-size 15px !important
					&:hover, &:focus, &:active
						color white
						background-color darken(primary, 20%)
						span
							background-color lighten(primary, 10%)
					&:focus
						outline none
	.owl-service
		.owl-theme
			.owl-controls
				.owl-buttons
					.owl-prev
						position absolute
						right 54px
						bottom -80px
						font-size 30px
