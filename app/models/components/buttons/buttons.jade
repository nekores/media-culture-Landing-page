//-=== THEME INVERSE BUTTONS END HERE ===


//-=== THEME ICON BUTTONS START HERE ===

mixin btn-icon-sm(classs,name,icon)
    button.btn.btn-sm(class=classs)&attributes(attributes) 
        i.fa(class=icon)
        |&nbsp; #{name}

mixin btn-icon-md(classs,name,icon)
    button.btn(class=classs)&attributes(attributes) 
        i.fa(class=icon)
        |&nbsp; #{name}

mixin btn-icon-lg(classs,name,icon)
    button.btn.btn-lg(class=classs)&attributes(attributes) 
        i.fa(class=icon)
        |&nbsp; #{name}

mixin btn-icon-xlg(classs,name,icon)
    button.btn.btn-xlg(class=classs)&attributes(attributes) 
        i.fa(class=icon)
        |&nbsp; #{name}



//-=== THEME ICON BUTTONS END HERE ===

//-=== SPLIT BUTTONS MAXIN START HERE


mixin btn-split-sm(classs, name)
    .btn-group
        button.btn.btn-sm(class=classs)&attributes(attributes) #{name}
        button.btn.btn-sm.dropdown-toggle(class=classs data-toggle=dropdown aria-expanded="false")&attributes(attributes)
            span.caret
            span.sr-only Toggle Dropdown
        ul.dropdown-menu(role="menu")
            li.dropdown-header(role="presentation") hellow


//-=== SPLIT BUTTONS MAXIN END HERE
