
//-=== bootstrap smsll buttons start===

mixin btn-bootstrap-sm(classs,name)
    button.btn.btn-sm(class=classs)&attributes(attributes) #{name}
    
//-=== bootstrap small buttons end===

mixin btn-bootstrap-md(classs,name)
    button.btn(class=classs)&attributes(attributes) #{name}

mixin btn-bootstrap-lg(classs,name)
    button.btn.btn-lg(class=classs)&attributes(attributes) #{name}



//-=== TRANSITION BUTTONS MAXIN START HERE ===


mixin btn-transition-sm(classs,name)
    button.btn.btn-transparent.btn-sm(class=classs)&attributes(attributes) #{name}


mixin btn-transition-md(classs,name)
    button.btn.btn-transparent(class=classs)&attributes(attributes) #{name}


mixin btn-transition-lg(classs,name)
    button.btn.btn-transparent.btn-lg(class=classs)&attributes(attributes) #{name}


mixin btn-transition-xlg(classs,name)
    button.btn.btn-transparent.btn-xlg(class=classs)&attributes(attributes) #{name}


//-=== TRANSITION BUTTONS MAXIN END HERE ===



//- THEME BUTTONS START HERE

mixin btn-theme-sm(classs,name)
    button.btn.btn-sm(class=classs)&attributes(attributes) #{name}

mixin btn-theme-md(classs,name)
    button.btn(class=classs)&attributes(attributes) #{name}

mixin btn-theme-lg(classs,name)
    button.btn.btn-lg(class=classs)&attributes(attributes) #{name}

mixin btn-theme-xlg(classs,name)
    button.btn.btn-xlg(class=classs)&attributes(attributes) #{name}


//-=== THEME BUTTONS END HERE ===


//-=== THEME INVERSE BUTTONS START HERE ===


mixin btn-theme-sm-inv(classs,name)
