
.portfolio-filter-gallery
    list-style none
    padding-top 5px
    text-align center
    li
        display inline-block
        a
            padding 20px 10px
            color #aaa
            display block
            font-size 16px
            line-height normal
            text-transform uppercase
            cursor pointer
            
            &.active
                border-bottom-color #777
                color primary
            &:hover
                color primary
                text-decoration none
            
            &:focus , &:visited, &:active
                box-shadow none
                text-decoration none
                outline 0 none

  //  gallery img-box styl

.img-box-portfolio
    position relative
    height 100%
    width 100%
    overflow hidden
    img
        height 100% !important
        width  100% !important
    &, .img-content, img, ::before , ::after
        transition .6s all ease-in-out
    .img-content
        position absolute
        width 100%
        height 100%
        top 0
        right 0
        text-align center
        background-color alpha(black, 0.6)    
        opacity 0
    .font-icon
        position absolute
        top 0
        left 0
        opacity 0   
        text-align center
        height 100%
        width 100%
        .icon-frame-inverse-white
            border-radius 50%
            
            transform scale(2)
            &:hover
                border-color primary
                background-color primary
        i
            transform scale(2)
            position relative
            top 0
            left 0
            &:hover
                color white
            &:focus
                outline none
                    
    &:hover, &:active
        img
            transform scale(1.2)
        .img-content
            opacity 1
            &::after
                left 0
            &::before
                right 0
        .font-icon
            opacity 1
            .icon-frame-inverse-white
                transform scale(1)
            i
                transform scale(1)
            