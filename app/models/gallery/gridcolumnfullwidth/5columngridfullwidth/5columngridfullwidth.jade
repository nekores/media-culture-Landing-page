mixin 5columngridfullwidth()
	// === gallery nav star here ===
	section
		.container-fluid#container1.no-padding
			.row.mt30
				.col-md-12.col-sm-12.col-xs-12.no-padding
					nav
						ul(class="portfolio-filter-gallery" id="filters")
							li
								a(class="all filter active", data-filter="all") All
							li
								a(class="filter ", data-filter=".webdesign") Design
							li
								a(class="filter", data-filter=".places") places
							li
								a(class="filter", data-filter=".wedding") wedding

					// === gallery nav end here ===
					//=== gallery starts here ===
					for i in [0,1,2,3,4,5,7,8,9,10]
						.col-xs-12.col-md-5th.mix.webdesign.pv15
							.img-box-portfolio
								img(src="img/work/" + i + ".jpg" class="img-responsive")
								.img-content
									.font-icon
										.table-1
											.table-middle-row-1.text-center.center-block
												ul.list-inline
													li
														+icon-fa('fa-link', 'icon-frame-inverse-white icon-sm rounded-cirlce', '#')
													li.popup-gallery
														+icon-fa('fa-search-plus', ' icon-frame-inverse-white icon-sm','img/work/' + i + '.jpg')
					for i in [0,1,2,3,4,5,6,7]
						.col-md-5th.mix.places.col-sm-3.pv15
							.img-box-portfolio
									img(src="img/places/" + i + ".jpg" class="img-responsive")
									.img-content
										.font-icon
											.table-1
												.table-middle-row-1.text-center.center-block
													ul.list-inline
														li
															+icon-fa('fa-link', 'icon-frame-inverse-white icon-sm rounded-cirlce', '#')
														li.popup-gallery
															+icon-fa('fa-search-plus', ' icon-frame-inverse-white icon-sm','img/work/' + i + '.jpg')
					for i in [1,2,3,4,5,6,7,8]
						.col-md-5th.mix.wedding.col-sm-3.pv15
							.img-box-portfolio
								img(src="img/wedding/" + i + ".jpg" class="img-responsive")
								.img-content
									.font-icon
										.table-1
											.table-middle-row-1.text-center.center-block
												ul.list-inline
													li
														+icon-fa('fa-link', 'icon-frame-inverse-white icon-sm rounded-cirlce', '#')
													li.popup-gallery
														+icon-fa('fa-search-plus', ' icon-frame-inverse-white icon-sm','img/wedding/' + i + '.jpg')
					//=== gallery end here ===