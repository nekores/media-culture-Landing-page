.contact1
	position relative
.bg-alpha
	height 100%
	background-color alpha(black,0.7)
	.contact-heading
		margin-top 100px
		font-size 42px
		color #fff
		text-transform uppercase
		font-weight 800
	.contact-para
		margin-top 30px
		font-size 18px
		font-weight 200
		color #fff
	.contact-me
		margin-top 30px
		margin-bottom 30px
		font-size 28px
		color #fff
		text-transform capitalize
		

	.contactinfo
		font-size 14px
		p
			margin-top 15px
			color #fff
			i
				padding-right 10px
.seprator-contact
	width 100%
	height 1px
	background-color #bbb !important

.input-form
	margin-top 110px
	textarea
		margin-top 22px
		border-width 1px 1px 1px 10px
		background-color transparent
		color #fff
		border-radius 0px
		border-color #000
		&:focus
			outline none
			border-color primary
			box-shadow none
	input
		margin-top 22px
		border-radius 0px
		border-color #000
		padding 25px 10px
		color #fff
		border-width 1px 1px 1px 10px
		background-color transparent
		&:focus
			outline none
			border-color primary
			box-shadow none
	